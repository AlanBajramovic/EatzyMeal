<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Grill Menu</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>

  <link rel="stylesheet" href="/FoodGalleri/menus/menu.css">

  <style>
    body {
      background-image: url(/FoodGalleri/menus/grill/seamount.jpg);
      background-size: cover;
      background-repeat: no-repeat;
      background-attachment: fixed;
    }
    .quantity-input {
      width: 60px;
      text-align: center;
      margin-left: 10px;
    }
    .order-button-container {
      text-align: center;
      margin-top: 30px;
    }
  </style>
</head>
<body>

  <!-- Topbar -->
  <div class="topbar d-flex justify-content-between align-items-center px-3 py-2">
    <button class="btn btn-light"><img id="shopcartimg" src="/FoodGalleri/images/hamburgerMenu.png" alt=""></button>
    <a href="/index"><img class="logo" src="/FoodGalleri/eatzyLogo.png" alt="" style="width: 400px; height: 87px; object-fit: cover;"></a>
    <a href="/kassa"><button class="btn btn-light"><img id="shopcartimg" src="/FoodGalleri/images/shopping-cart.png" alt=""></button></a>
  </div>

  <a href="/galleri"><button class="backbtn btn btn-light"><img id="backbtnimg" src="/FoodGalleri/images/back-button.png" alt="Tillbaka knapp"></button></a>

  <div class="menu">

    <!-- Grilled Ribeye -->
    <div class="itemLayout d-flex flex-column align-items-center">
      <img src="/FoodGalleri/menus/grill/Grilled-Ribeye.jpg" alt="Grilled Ribeye Steak" class="img-fluid">
      <h3>Grilled Ribeye Steak</h3>
      <div class="priceAndBtn d-flex align-items-center">
        <h4 class="borderPris me-3">259.00 kr</h4>
        <input type="number" class="form-control quantity-input" min="0" value="0" data-id="31">
      </div>
    </div>

    <!-- BBQ Chicken Thighs -->
    <div class="itemLayout d-flex flex-column align-items-center">
      <img src="/FoodGalleri/menus/grill/chicken.jpg" alt="BBQ Chicken Thighs" class="img-fluid">
      <h3>BBQ Chicken Thighs</h3>
      <div class="priceAndBtn d-flex align-items-center">
        <h4 class="borderPris me-3">159.00 kr</h4>
        <input type="number" class="form-control quantity-input" min="0" value="0" data-id="32">
      </div>
    </div>

    <!-- Grilled Salmon -->
    <div class="itemLayout d-flex flex-column align-items-center">
      <img src="/FoodGalleri/menus/grill/salmon.jpg" alt="Grilled Salmon" class="img-fluid">
      <h3>Grilled Salmon</h3>
      <div class="priceAndBtn d-flex align-items-center">
        <h4 class="borderPris me-3">189.00 kr</h4>
        <input type="number" class="form-control quantity-input" min="0" value="0" data-id="33">
      </div>
    </div>

  </div>

  <!-- Order Button -->
  <div class="order-button-container">
    <button class="btn btn-success btn-lg" onclick="submitGrillOrder()">Place Order</button>
  </div>

  <h6 id="copyright">Â© EatzyMeal AB</h6>

  <script src="/FoodGalleri/FoodGScript.js"></script>
  <script type="module">
    import { placeOrder } from "/FoodGalleri/javascript/supabase.js";

    window.submitGrillOrder = function () {
      const inputs = document.querySelectorAll('.quantity-input');
      const items = [];

      inputs.forEach(input => {
        const qty = parseInt(input.value);
        const mealId = parseInt(input.dataset.id);
        if (qty > 0) {
          items.push({ meal_id: mealId, quantity: qty });
        }
      });

      if (items.length === 0) {
        alert('Please select at least one grill item.');
        return;
      }

      placeOrder(items);
    };
  </script>

</body>
</html>